<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/p10"
    tools:context=".M0501">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p10">

        <TextView
            android:id="@+id/m0501_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0501_t001"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            tools:visibility="visible" />

        <Spinner
            android:id="@+id/m0501_s001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/m0501_a001"
            android:popupBackground="@color/Yellow"
            android:prompt="@string/m0501_s001"
            android:spinnerMode="dialog"
            tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p10">

        <TextView
            android:id="@+id/m0501_t002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0501_t002"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/m0501_e001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:ems="10"
            android:hint="@string/nospace"
            android:inputType="number"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck" />

    </TableRow>

    <Button
        android:id="@+id/m0501_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p20"
        android:background="@color/Yellow"
        android:text="@string/m0501_b001"
        android:textColor="@color/Red"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0501_t003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p20"
        android:text="@string/m0501_t003"
        android:textColor="@color/Red"
        android:textSize="@dimen/fontsize" />

    <TextView
        android:id="@+id/m0501_f000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m0501_f000"
        android:textSize="@dimen/fontsize" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p50"
        android:text="@string/myname"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/fontsize" />
</LinearLayout>